mixin head(name, key)
  doctype html
  html(lang="ru")
    head
      meta(charset="UTF-8")
      meta(http-equiv="X-UA-Compatible" content="IE=edge")
      meta(name="viewport" content="width=device-width, initial-scale=1.0")
      meta(name="theme-color" content="#28966E")
      title= info.title + ' | ' + name
      link(rel="stylesheet" href="styles.min.css")
      link(type="image/x-icon" rel="shortcut icon" href="img/header/logo.png")
      script(async src="bundle.min.js")
    body(class=key)
      block