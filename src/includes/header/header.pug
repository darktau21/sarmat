mixin header(active)
  header.header
    .container.container_header
        .logo
            .logo__img
              a(href="https://sfedu.ru" target="_blank" rel="noopener noreferrer")
                img(src="img/header/logo.png" alt="ЮФУ")
            .logo__text
              a(href="#") Museum of Soil Science
        .main-menu
          .main-menu__mobile-button
            span
          ul.main-menu__list
              li.main-menu__item(class=active == 1 ? 'main-menu__item_active' : '')
                a(href="index.html") Главная
              li.main-menu__item(class=active == 2 ? 'main-menu__item_active' : '')
                a(href="expo.html") Экспозиция
              li.main-menu__item(class=active == 3 ? 'main-menu__item_active' : '')
                a(href="photos.html") Фотоархив
              li.main-menu__item(class=active == 4 ? 'main-menu__item_active' : '')
                a(href="history.html") История
              li.main-menu__item(class=active == 5 ? 'main-menu__item_active' : '')
                a(href="contacts.html") Контакты